@(displayable_watches: List[Watch], supported_brands: List[Brand])<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
      <loc>http://@{request.host()}/</loc>
      <changefreq>daily</changefreq>
      <priority>1.0</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.offer()</loc>
      <changefreq>daily</changefreq>
      <priority>1.0</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.more()</loc>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.prices()</loc>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.service()</loc>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.service_test()</loc>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.watch_collection()</loc>
      <changefreq>daily</changefreq>
      <priority>0.9</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.order(null)</loc>
      <changefreq>monthly</changefreq>
      <priority>1.0</priority>
    </url>
    @for(brand <- supported_brands) {
    <url>
      <loc>http://@{request.host()}@routes.Application.order(brand.seo_name)</loc>
      <changefreq>monthly</changefreq>
      <priority>1.0</priority>
    </url>
    }
    <url>
      <loc>http://@{request.host()}@routes.Application.cgv()</loc>
      <changefreq>daily</changefreq>
      <priority>0.6</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.about()</loc>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.legal()</loc>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.faq()</loc>
      <changefreq>daily</changefreq>
      <priority>1</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.privacy()</loc>
      <changefreq>daily</changefreq>
      <priority>0.4</priority>
    </url>
    @for(watch <- displayable_watches) {
    <url>
      <loc>http://@{request.host()}@routes.Application.watch_detail(watch.seo_name)</loc>
      <changefreq>daily</changefreq>
      <priority>0.6</priority>
    </url>
    }
    <url>
      <loc>http://@{request.host()}@routes.Application.contact()</loc>
      <changefreq>daily</changefreq>
      <priority>0.3</priority>
    </url>
    <url>
      <loc>http://@{request.host()}@routes.Application.callRequest()</loc>
      <changefreq>daily</changefreq>
      <priority>0.3</priority>
    </url>
</urlset>