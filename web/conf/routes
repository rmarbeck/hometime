# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Service page
GET     /service                    controllers.Application.service()

# Watches
GET     /watches                    controllers.Application.watch_collection()

# Single watch
GET     /watch/:id                  controllers.Application.watch_detail(id: Long)

# Offer
GET     /offer                      controllers.Application.offer()

# Prices
GET     /prices                     controllers.Application.prices()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
